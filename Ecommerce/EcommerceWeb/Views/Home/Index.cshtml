@model EcommerceWeb.Models.Product

@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000" style="max-height: 350px;">
    <ol class="carousel-indicators" style="max-height: 350px;">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox" style="max-height: 350px;">
        @{var i = 0;}
        @foreach (var p in ViewData["last_products"] as IList<Product>)
        {
            var image = p.Image == null ? "noimg.png" : p.Image;
            if (i == 0)
            {
                <div class="item active" style="max-height: 350px;">
                    <img src="~/images/@image" />
                    <div class="carousel-caption" role="option">
                        <p style="max-height: 350px; color:black;">
                            @p.Name
                            <br>
                            <a class="btn btn-default" asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@p.ProductId">Show product</a>
                        </p>
                    </div>
                </div>
            }
            else
            {
                <div class="item" style="max-height: 350px;">
                    <img src="~/images/@image" />
                    <div class="carousel-caption" role="option">
                        <p style="max-height: 350px; color:black;">
                            @p.Name
                        </p>
                        <a class="btn btn-default" asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@p.ProductId">Show product</a>
                    </div>
                </div>
            }
            i++;
        }
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    @foreach (var p in ViewData["last_products"] as IList<Product>)
    {
        var image = p.Image == null ? "noimg.png" : p.Image;
        <div class="col-md-4 col-xd-12" style="text-align: center;">
            <h2>
                <a asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@p.ProductId" style="cursor: pointer;">
                    @p.Name
                <p><img src="~/images/@image" width="250" height="250" class="img-responsive" style="align-content:center; margin: 0 auto;" /></p>
            </a>
        </h2>

    </div>
}
</div>

